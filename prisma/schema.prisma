generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("user")
  birthday      DateTime?
  phone         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?
  lastOrderAt   DateTime?
  accounts      Account[]
  address       Address?
  orders        Order[]
  sessions      Session[]

  @@index([lastLoginAt])
  @@index([lastOrderAt])
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Address {
  id             String   @id @default(cuid())
  userId         String   @unique
  recipientName  String?
  recipientPhone String?
  addressLine1   String
  addressLine2   String?
  city           String
  region         String?
  postalCode     String
  country        String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique @default(cuid())
  userId          String
  customerEmail   String
  customerName    String?
  recipientName   String
  recipientPhone  String?
  shippingLine1   String
  shippingLine2   String?
  shippingCity    String
  shippingRegion  String?
  shippingPostal  String
  shippingCountry String
  trackingCode    String?
  total           Decimal     @db.Decimal(10, 2)
  status          OrderStatus @default(PENDING)
  notes           String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  lastFour        String?     @db.Char(4)
  paymentMethod   String      @default("demo")
  currency        String      @default("NT$")
  user            User        @relation(fields: [userId], references: [id])
  items           OrderItem[]

  @@index([createdAt])
  @@index([customerEmail])
  @@index([orderNumber])
  @@index([status])
}

model OrderItem {
  id              String   @id @default(cuid())
  orderId         String
  productId       String?
  productName     String
  productImage    String?
  productSlug     String
  productCategory String
  productVolume   String?
  quantity        Int
  price           Decimal  @db.Decimal(10, 2)
  isFreeSample    Boolean  @default(false)
  order           Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product         Product? @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

model Collection {
  id             Int                     @id @default(autoincrement())
  slug           String                  @unique
  coverImage1x1  String
  coverImage16x9 String
  translations   CollectionTranslation[]
  products       Product[]
}

model CollectionTranslation {
  collectionId Int
  locale       String
  name         String
  description  String
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)

  @@id([collectionId, locale])
}

model Category {
  id           Int                   @id @default(autoincrement())
  slug         String                @unique
  translations CategoryTranslation[]
  products     Product[]
}

model CategoryTranslation {
  categoryId  Int
  locale      String
  name        String
  description String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([categoryId, locale])
}

model Volume {
  id           Int                 @id @default(autoincrement())
  value        String              @unique
  products     ProductVolume[]
  translations VolumeTranslation[]
}

model VolumeTranslation {
  volumeId    Int
  locale      String
  displayName String
  volume      Volume @relation(fields: [volumeId], references: [id], onDelete: Cascade)

  @@id([volumeId, locale])
}

model ProductVolume {
  productId String
  volumeId  Int
  locale    String
  price     Decimal @db.Decimal(10, 2)
  stock     Int?
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  volume    Volume  @relation(fields: [volumeId], references: [id], onDelete: Cascade)

  @@id([productId, volumeId, locale])
}

model Product {
  id             String               @id @default(cuid())
  slug           String               @unique
  categoryId     Int
  collectionId   Int
  coverImage1x1  String
  coverImage16x9 String
  productImage   String
  boxImage       String
  galleryImages  String[]             @default([])
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
  isDeleted      Boolean              @default(false)
  orderItems     OrderItem[]
  category       Category             @relation(fields: [categoryId], references: [id])
  collection     Collection           @relation(fields: [collectionId], references: [id])
  tags           ProductTag[]
  translations   ProductTranslation[]
  volumes        ProductVolume[]
}

model ProductTranslation {
  productId  String
  locale     String
  name       String
  concept    String
  sensations String
  product    Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@id([productId, locale])
}

model Tag {
  id           Int              @id @default(autoincrement())
  slug         String           @unique
  products     ProductTag[]
  translations TagTranslation[]
}

model TagTranslation {
  tagId  Int
  locale String
  name   String
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([tagId, locale])
}

model ProductTag {
  productId String
  tagId     Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([productId, tagId])
}

enum OrderStatus {
  PENDING
  PAID
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
  CANCELLING
  REQUESTED
}
